<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.project.sagar.loctrack.AddGeoMsg"
    tools:showIn="@layout/activity_add_geo_msg">

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:background="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:textColor="#000000"
        android:textStyle="italic"
        android:id="@+id/editText"
        android:layout_below="@+id/place_autocomplete_fragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/place_autocomplete_fragment"
        android:layout_alignEnd="@+id/place_autocomplete_fragment"
        android:layout_alignParentBottom="true"
        android:gravity="top"
        android:background="#ffffff"
        android:padding="5dp"/>


</RelativeLayout>
